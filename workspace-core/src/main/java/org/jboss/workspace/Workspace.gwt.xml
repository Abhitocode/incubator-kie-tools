<?xml version="1.0" encoding="UTF-8"?>
<module>
    <!-- Only generate code for supported browsers -->
    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='org.gwt.mosaic.Mosaic'/>

    <inherits name='com.allen_sauer.gwt.dnd.gwt-dnd'/>
    <!--<inherits name='org.gwt.mosaic.Mosaic'/>-->

    <!-- Configure the GuvnorNG Modules to include -->
    <!--<inherits name="org.mvel.guvnorui.MVELModule"/>-->
    <!--<inherits name="org.jboss.guvnor.security.GuvnorSecurity"/>-->
    <inherits name="org.gwt.mosaic.actions.Actions"/>
    <inherits name="com.google.gwt.user.theme.chrome.Chrome"/>

    <!--<inherits name="org.gwt.mosaic.theme.standard.Standard"/>-->

    <generate-with class="org.jboss.workspace.rebind.GuvnorLoaderBootstrapGenerator">
        <when-type-assignable
                class="org.jboss.workspace.client.framework.ModuleLoaderBootstrap"/>
    </generate-with>

    <!-- Specify the app entry point class.                   -->
    <entry-point class='org.jboss.workspace.client.Workspace'/>
    <stylesheet src="jboss-workspace-default.css"/>

    <servlet path="/workspaceUIstate" class="org.jboss.workspace.server.LayoutStateServiceImpl"/>

    <!--<set-property name="user.agent" value="ie6,gecko1_8,safari"/>-->

    <replace-with class="org.jboss.workspace.client.util.effectimpl.KHTMLEffectImpl">
        <when-type-is class="org.jboss.workspace.client.util.Effects"/>
        <any>
            <when-property-is name="user.agent" value="safari"/>
            <when-property-is name="user.agent" value="opera"/>
        </any>
    </replace-with>

    <replace-with class="org.jboss.workspace.client.util.effectimpl.MozillaEffectImpl">
        <when-type-is class="org.jboss.workspace.client.util.Effects"/>
        <any>
            <when-property-is name="user.agent" value="gecko"/>
            <when-property-is name="user.agent" value="gecko1_8"/>
        </any>
    </replace-with>
    
    <replace-with class="org.jboss.workspace.client.util.effectimpl.IEEffectImpl">
        <when-type-is class="org.jboss.workspace.client.util.Effects"/>
        <any>
            <when-property-is name="user.agent" value="ie6"/>
            <when-property-is name="user.agent" value="ie7"/>
            <when-property-is name="user.agent" value="ie8"/>
        </any>
    </replace-with>

</module>

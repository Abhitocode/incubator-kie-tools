{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "uniforms": ["src/uniforms"],
      "uniforms/*": ["src/uniforms/*"],
      "uniforms-patternfly": ["src"],
      "uniforms-patternfly/*": ["src/*"],
    },
    "strict": true
  }
}
